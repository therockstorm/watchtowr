{
  "name": "watchtowr",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/therockstorm/watchtowr"
  },
  "config": {
    "apiId": "0dx44nhb4l",
    "domain": "watchtowr.io",
    "provider": "letsencrypt",
    "region": "us-west-2",
    "service": "api"
  },
  "scripts": {
    "build": "mkdir dist && cp src/serverless.yml dist && cp src/package.json dist && cd dist && yarn && cd .. && babel --out-dir=dist ./src",
    "clean": "rm -rf dist",
    "deploy": "npm run clean && npm run build && cd dist && serverless deploy --stage $NODE_ENV --verbose && cd ..",
    "deploy-cert": "babel-node scripts/deployCert.js ${npm_package_config_provider} ${npm_package_config_domain} ${npm_package_config_region} ${npm_package_config_apiId}",
    "echo": "echo NODE_ENV=$NODE_ENV TESTS_TABLE=$TESTS_TABLE TEST_RUNS_TABLE=$TEST_RUNS_TABLE ACME_DIR=$ACME_DIR",
    "get-info": "babel-node scripts/getInfo.js ${npm_package_config_provider} ${npm_package_config_domain}",
    "lint:js": "eslint . --fix",
    "logs": "cd src && serverless logs --function ${npm_package_config_service} --stage $NODE_ENV --startTime 1m && cd ..",
    "logs:api": "npm run logs --watchtowr:service=api",
    "logs:runner": "npm run logs --watchtowr:service=runner",
    "map-api": "babel-node scripts/mapApi.js ${npm_package_config_domain} ${npm_package_config_region} ${npm_package_config_apiId}",
    "test": "NODE_ENV=test mocha --require babel-register --recursive test/",
    "test:api": "babel-node scripts/apiFunc.js",
    "test:runner": "babel-node scripts/runnerFunc.js",
    "update-schema": "babel-node scripts/updateSchema.js"
  },
  "devDependencies": {
    "aws-sdk": "^2.7.13",
    "axios": "^0.15.3",
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "eslint": "^3.12.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "graphql": "^0.8.2",
    "graphql-custom-types": "^0.7.1",
    "mocha": "^3.2.0",
    "sinon": "^1.17.6",
    "uuid": "^3.0.1"
  }
}
